{% extends "layouts/layout.twig" %}

{% block title %}Create task{% endblock %}

{% block content %}

<div class="container col-lg-5">
    <form method="post" action="/tasks/store">
        <div class="form-group">
            <label>Ваше имя</label>
            <input type="text" class="form-control" name="name" placeholder="Username">
            {% if errors_has('name') %}
                <span class="form-text text-danger">
                    <strong>{{ errors_get('name') }}</strong>
                </span>
            {% endif %}
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" name="email" placeholder="name@example.com">
            {% if errors_has('email') %}
                <span class="form-text text-danger">
                    <strong>{{ errors_get('email') }}</strong>
                </span>
            {% endif %}
        </div>
        <div class="form-group">
            <label>Текст задачи</label>
            <textarea class="form-control" name="text" rows="3" placeholder="Введите текст..."></textarea>
            {% if errors_has('text') %}
                <span class="form-text text-danger">
                    <strong>{{ errors_get('text') }}</strong>
                </span>
            {% endif %}
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Добавить</button>
            <a href="/" class="btn btn-danger">Отмена</a>
        </div>
    </form>
</div>

{% endblock %}