<div class="container mt-3">
    <ul class="pagination justify-content-center">

      {% if data.paginator.getPrevUrl() %}
          <li class="page-item"><a class="page-link" href="{{ data.paginator.getPrevUrl() }}">Previous</a></li>
      {% else %}
          <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
      {% endif %}

      {% for page in data.paginator.getPages() %}
        {% if page.url %}
            {% if page.isCurrent %}
                <li class="page-item active">
                  <a class="page-link" href="{{ page.url }}">{{ page.num }}<span class="sr-only">(current)</span></a>
                </li>
            {% else %}
              <li class="page-item"><a class="page-link" href="{{ page.url }}">{{ page.num }}</a></li>
            {% endif %}
        {% else %}
            <li class="disabled"><span>{{ page.num }}</span></li>
        {% endif %}
      {% endfor %}

      {% if data.paginator.getNextUrl() %}
          <li class="page-item"><a class="page-link" href="{{ data.paginator.getNextUrl() }}">Next</a></li>
      {% else %}
          <li class="page-item disabled"><a class="page-link" href="#">Next</a></li>
      {% endif %}
      
    </ul>

    <p class="text-center">
        {{ data.paginator.getTotalItems() }} записей найдено.
        Показываются 
        {{ data.paginator.getCurrentPageFirstItem() }} 
        - 
        {{ data.paginator.getCurrentPageLastItem() }}.
    </p>
</div>